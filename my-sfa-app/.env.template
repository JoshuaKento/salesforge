# SalesForge Application Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_URL=jdbc:postgresql://localhost:5432/sfa_db
DB_USERNAME=sfa_user
DB_PASSWORD=your_secure_database_password_here

# Development database (optional)
# DB_URL=jdbc:postgresql://localhost:5432/sfa_dev_db
# DB_USERNAME=sfa_dev_user
# DB_PASSWORD=your_dev_password_here

# ===================================
# JWT SECURITY CONFIGURATION
# ===================================
# CRITICAL: Generate a strong secret key for production
# Use: openssl rand -base64 64
# Minimum 256 bits (32 characters) required
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_256_bits_long_generated_with_openssl_rand_base64_64

# JWT token expiration in milliseconds
# 86400000 = 24 hours, 3600000 = 1 hour
JWT_EXPIRATION=86400000

# ===================================
# SERVER CONFIGURATION
# ===================================
SERVER_PORT=8080

# ===================================
# CORS CONFIGURATION
# ===================================
# Comma-separated list of allowed origins for CORS
# For production, specify exact domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ===================================
# SPRING PROFILES
# ===================================
# Set active profile: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# ===================================
# PRODUCTION SECURITY SETTINGS
# ===================================
# Set to true in production for HTTPS enforcement
SECURITY_REQUIRE_SSL=false

# ===================================
# OPTIONAL: OAuth2 Configuration
# ===================================
# OAUTH2_CLIENT_ID=your_oauth2_client_id
# OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
# OAUTH2_ISSUER_URI=https://your-oauth-provider.com

# ===================================
# OPTIONAL: Email Configuration
# ===================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password